<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xcinfo.xc_blueteeth_android.main.monitor.activity.WarnRuleActivity">
    <include
        layout="@layout/title_bar"
        />

       <RelativeLayout
       android:padding="5dp"
       android:layout_marginTop="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:layout_marginLeft="5dp"
           android:layout_centerInParent="true"
           android:layout_alignParentLeft="true"
           android:text="设置报警上限:"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <EditText
           android:inputType="number"
           android:cursorVisible="false"
           android:id="@+id/ed_warn_max"
           android:background="@drawable/shape_max_min_value"
           android:layout_centerInParent="true"
           android:layout_alignParentRight="true"
           android:layout_width="40dp"
           android:layout_height="25dp" />
   </RelativeLayout>
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/channel_status_off"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_between" />
   <RelativeLayout
       android:padding="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:layout_marginLeft="5dp"
           android:layout_centerInParent="true"
           android:layout_alignParentLeft="true"
           android:text="设置报警下限:"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <EditText
           android:inputType="number"
           android:cursorVisible="false"
           android:background="@drawable/shape_max_min_value"
           android:id="@+id/ed_warn_min"
           android:layout_centerInParent="true"
           android:layout_alignParentRight="true"
           android:layout_width="40dp"
           android:layout_height="25dp" />
   </RelativeLayout>



</LinearLayout>
