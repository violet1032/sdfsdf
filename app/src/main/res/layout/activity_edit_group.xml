<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xcinfo.xc_blueteeth_android.main.monitor.activity.EditGroupActivity">
    <include
        layout="@layout/title_bar"
        />
    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:id="@+id/tv_add_group"
        android:layout_width="match_parent"
        android:text="@string/tv_add_group"
        android:textColor="@color/main_black"
        android:textSize="@dimen/textview_main_body"
        android:drawableLeft="@drawable/add_group"
        android:layout_height="40dp" />
    <ImageView
        android:background="@color/channel_status_off"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <ExpandableListView
        android:id="@+id/mExpandableListView"
        android:groupIndicator="@null"
        android:drawSelectorOnTop="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
